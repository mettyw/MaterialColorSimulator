        <class name="chip-thumbnail" fill="colorPrimary" />
        
        <!-- https://github.com/material-components/material-components-android/blob/master/docs/components/Dialog.md -->
        <!-- https://github.com/material-components/material-components-android/tree/master/lib/java/com/google/android/material/dialog/res/values -->
        <class name="dialog-container" fill="colorSurface" />
        <class name="dialog-title-textlabel" fill="colorOnSurface" />
        <class name="dialog-title-icon" fill="colorSecondary" />
        <class name="dialog-content-text" fill="colorOnSurfaceVariant" />
        <class name="dialog-scrim" backgroundDimAmount="32" />
        
        <!-- https://github.com/material-components/material-components-android/blob/master/docs/components/Divider.md -->
        <!-- https://github.com/material-components/material-components-android/blob/master/lib/java/com/google/android/material/divider/res/values/styles.xml -->
        <class name="divider-container" fill="colorOutline"  />
        <class name="mcomp-divider-container" fill="colorOnSurface" fill-opacity="88" />
        <!-- https://github.com/material-components/material-components-android/blob/master/lib/java/com/google/android/material/divider/res/values/tokens.xml -->
        <!--<class name="m3-divider-container" fill="colorOutlineVariant" />-->
        
        <!-- https://github.com/material-components/material-components-android/blob/master/docs/components/FloatingActionButton.md -->
        <class name="fab-container" fill="colorPrimaryContainer" elevation="6" ripple="colorOnPrimaryContainer" />
        <class name="fab-icon" fill="colorOnPrimaryContainer" />
        <class name="fab-cutout-background" fill="colorBackground" />
        
        <!-- https://github.com/material-components/material-components-android/blob/master/docs/components/RadioButton.md -->
        <class name="radiobutton" fill="colorOnSurface" />
        
        <!-- https://github.com/material-components/material-components-android/blob/master/docs/components/Slider.md -->
        <class name="slider-track-active" fill="colorPrimary" />
        <class name="slider-track-inactive" fill="colorSurfaceVariant" />
        <class name="slider-thumb" fill="colorPrimary" elevation="2" />
        <class name="slider-tickmark-active" fill="colorSurfaceVariant" />
        <class name="slider-tickmark-inactive" fill="colorPrimary" />
        
        <!-- https://github.com/material-components/material-components-android/blob/master/docs/components/Snackbar.md -->
        <!-- https://github.com/material-components/material-components-android/blob/master/lib/java/com/google/android/material/snackbar/res/values/styles.xml -->
        <class name="snackbar-container" fill="colorSurfaceInverse" fill-opacity="20" elevation="6" />
        <class name="snackbar-textlabel" fill="colorOnSurfaceInverse" />
        <class name="snackbar-action" fill="colorPrimaryInverse" />
        
        <!-- https://m3.material.io/components/switch/specs -->
        <!-- https://github.com/material-components/material-components-android/blob/master/docs/components/Switch.md -->
        <!-- https://github.com/material-components/material-components-android/tree/master/lib/java/com/google/android/material/switchmaterial/res/values -->
        <class name="switch-thumb-unchecked" fill="colorOutline" />
        <class name="switch-thumb-checked" fill="colorOnPrimary" />
        <class name="switch-track-unchecked" fill="colorSurfaceVariant" stroke="colorOutline" />
        <class name="switch-track-checked" fill="colorPrimary" />
        <class name="switch-icon-unchecked" fill="colorSurfaceVariant" />
        <class name="switch-icon-checked" fill="colorOnPrimaryContainer" />
        
        <class name="m2-switch-thumb-unchecked" fill="colorOnSurface" />
        <class name="m2-switch-thumb-checked" fill="colorPrimary" />
        <class name="m2-switch-track-unchecked" fill="colorOutline"  />
        <class name="m2-switch-track-checked" fill="colorPrimaryContainer" />
        
        <!-- https://m3.material.io/components/tabs/specs -->
        <!-- https://github.com/material-components/material-components-android/blob/master/docs/components/Tabs.md -->
