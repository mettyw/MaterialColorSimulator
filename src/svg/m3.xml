        <class name="container-surface" fill="colorSurface" />
        
        <class name="device-statusbar" fill="colorTransparent" />
        <class name="device-statusbar-labeltext" fill="colorOnSurface" />
        <class name="m2-device-statusbar" fill="colorBlack" fill-opacity="40" />
        <class name="m2-device-statusbar-labeltext" fill="colorWhite" />

        <class name="device-frame" fill="colorDeviceFrame" />
        <class name="device-button" fill="colorDeviceButton" />
        <class name="device-background" fill="colorBackground" />
        <class name="mock-description" fill="colorBlack" />
        
    </classes>
