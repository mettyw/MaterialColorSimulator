        <class name="label-onprimary" fill="colorOnPrimary" />
        <class name="label-onprimarycontainer" fill="colorOnPrimaryContainer" />
        <class name="label-secondary" fill="colorSecondary" />
        <class name="label-onsecondary" fill="colorOnSecondary" />
        <class name="label-onsecondarycontainer" fill="colorOnSecondaryContainerC" />
        <class name="label-onsurface" fill="colorOnSurface" />
        <class name="label-onsurfacevariant" fill="colorOnSurfaceVariant" />
