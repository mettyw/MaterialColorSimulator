        <color name="colorOnPrimary" value="#FFFFFF" label="OnPrimary" />
        <color name="colorPrimaryContainer" value="#FFD9E2" label="PrimaryContainer" />
        <color name="colorOnPrimaryContainer" value="#3E001D" label="OnPrimaryContainer" />
        <color name="colorSecondary" value="#74565F" label="Secondary" />
        <color name="colorOnSecondary" value="#FFFFFF" label="OnSecondary" />
        <color name="colorSecondaryContainer" value="#FFD9E2" label="SecondaryContainer" />
        <color name="colorOnSecondaryContainer" value="#2B151C" label="OnSecondaryContainer" />
        
        <color name="colorBackground" value="#FFFBFF" label="Background" />
        <color name="colorOnBackground" value="#201A1B" label="OnBackground" />
        <color name="colorSurface" value="#FFFBFF" label="Surface" />
        <color name="colorOnSurface" value="#201A1B" label="OnSurface" />
        <color name="colorSurfaceVariant" value="#F2DDE1" label="SurfaceVariant" />
